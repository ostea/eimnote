<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_title_height"
    android:background="#d0d0d0"
    >


    <ImageView
        android:id="@+id/tv_search_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/iv_back_arrow"
        />


    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/tv_search_cancel"
        android:background="@drawable/bg_search"
        >

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/iv_del_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/del"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/et_search_point"
            android:layout_width="fill_parent"
            android:layout_height="18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/iv_search"
            android:layout_toLeftOf="@id/iv_del_content"
            android:layout_toRightOf="@id/iv_search"
            android:layout_toStartOf="@id/iv_del_content"
            android:background="@color/color_bg_white"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:hint="aaa"
            android:imeOptions="actionSearch"
            android:textColor="@color/color_bg_gray"
            android:textSize="14sp"
            />
    </RelativeLayout>

</RelativeLayout>